<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".profile.admin.ProductAddFragment"

    >

    <ImageView
        android:id="@+id/image_add_product"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_weight="1"
        app:srcCompat="@mipmap/ic_launcher" />

    <EditText
        android:id="@+id/name_add_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Название"
        android:inputType="textShortMessage" />

    <EditText
        android:id="@+id/weight_add_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Вес"
        android:inputType="number|numberDecimal" />

    <EditText
        android:id="@+id/price_add_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Цена"
        android:inputType="number|numberDecimal" />

    <EditText
        android:id="@+id/description_add_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Описание"
        android:inputType="textMultiLine|textLongMessage" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardElevation="3dp">

        <Button
            android:id="@+id/bt_post_product"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:text="Добавить"
            android:textSize="18sp"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>

</LinearLayout>