<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#bebbbb"
    android:elevation="3dp"
    android:orientation="vertical"
    android:padding="1dp"
    android:translationX="5dp"
    android:translationZ="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_light_background"
        android:orientation="vertical"
        android:padding="10dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/name_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"
                android:text="Новый сотрудник"
                android:textColor="@android:color/background_dark"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/time_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="5dp"
                android:text="TextView"
                android:textSize="35sp"
                tools:text="22 августа 20:10" />
        </FrameLayout>

        <ImageView
            android:id="@+id/image_new"
            android:layout_width="match_parent"
            android:layout_height="800dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/description_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="jgbcccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccccc"
            android:textSize="35sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bt_review_new"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="right"
                android:padding="5dp"
                android:src="@drawable/otziv" />

        </FrameLayout>
    </LinearLayout>

</LinearLayout>